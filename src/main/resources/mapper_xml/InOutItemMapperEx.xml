<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruozedata.erp.datasource.mappers.InOutItemMapperEx">
    <select id="selectByConditionInOutItem" parameterType="com.ruozedata.erp.datasource.entities.InOutItemExample" resultMap="com.ruozedata.erp.datasource.mappers.InOutItemMapper.BaseResultMap">
        select *
        FROM ruozedata_inoutitem
        where 1=1
        <if test="name != null">
            and name like '%${name}%'
        </if>
        <if test="type != null">
            and type='${type}'
        </if>
        <if test="remark != null">
            and remark like '%${remark}%'
        </if>
        and ifnull(delete_Flag,'0') !='1'
        <if test="offset != null and rows != null">
            limit #{offset},#{rows}
        </if>
    </select>
    <select id="countsByInOutItem" resultType="java.lang.Long">
        SELECT
        COUNT(id)
        FROM ruozedata_inoutitem
        WHERE 1=1
        <if test="name != null">
            and name like '%${name}%'
        </if>
        <if test="type != null">
            and type='${type}'
        </if>
        <if test="remark != null">
            and remark like '%${remark}%'
        </if>
        and ifnull(delete_Flag,'0') !='1'
    </select>
    <update id="batchDeleteInOutItemByIds">
        update ruozedata_inoutitem
        set delete_Flag='1'
        where 1=1
        and id in (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </update>
</mapper>